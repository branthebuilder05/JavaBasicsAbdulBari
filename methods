1. var args

iimport java.util.*;
public class Main
{
  
    static void show(int ... a){
    
    System.out.println(Integer.MIN_VALUE);
    for(ele:a)
      System.out.println(ele);
      }
	public static void main(String a[]) {
		System.out.println("Hello World");
		int aa[] = new int[5];
		show();
		
	}
}
 


2. recursion


import java.util.*;
public class Main
{
    static void fun(int n){
        if(n>0){
           
            fun(n-1);
         System.out.println("Hello from "+ n);
            
        }
        
        
        
    }
    static void show(int ... a){
    
    System.out.println(Integer.MIN_VALUE);
}
	public static void main(String a[]) {
		System.out.println("Hello World");
		int aa[] = new int[5];
		//show();
		fun(5);
	}
}




 
